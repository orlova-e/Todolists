{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "User ID=admin;Password=12345678;Host=localhost;Port=5432;Database=todolists;"
  },
  "IdentityOptions": {
    "Scope": {
      "Name": "todolists-client-scope",
      "UserClaimsClientId": "client_id"
    },
    "Client": {
      "ClientId": "client_id",
      "AllowedScope": "todolists-client-scope",
      "RequireClientSecret": false,
      "AllowOfflineAccess": true,
      "AccessTokenLifetimeHours": 24
    }
  }
}
